{
    "extends": "../../tsconfig.base.json",
    "compilerOptions": {
        "outDir": "../../public",
        "rootDir": ".",
        "composite": true,
        "lib": ["dom", "es6"],
        "jsx": "react",
        "baseUrl": ".",
        "target": "ESNext",
        "useDefineForClassFields": true,
        "module": "ESNext",
        "allowJs": true,
        "isolatedModules": true,
        "moduleResolution": "bundler",
        "paths": {
            "@/*": ["src/frontend/*"]
        }
    },
    "include": ["./**/*.ts", "./**/*.tsx", "./**/*.svelte", "./**/*.js"],
    "exclude": ["node_modules"]
}
